<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_500</item>
        <item name="android:textColorHint">@color/gray</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_900</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:windowBackground">@color/darkdark</item>
        <item name="android:textColorPrimary">@color/white_almost</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>

        <item name="android:colorBackgroundFloating" tools:targetApi="23">@color/dark</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">@color/white</item>
        <item name="android:bottomDark">@color/white</item>
        <item name="android:bottomMedium">@color/white</item>
        <item name="android:centerBright">@color/white</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:centerMedium">@color/white</item>
        <item name="android:fullBright">@color/primary_500</item>
        <item name="android:fullDark">@color/primary_500</item>
        <item name="android:topBright">@color/primary_500</item>
        <item name="android:topDark">@color/primary_500</item>
        <item name="android:background">@color/dark</item>
        <item name="android:textColorPrimary">@color/white_almost</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="android:windowBackground">@color/darkdark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_900</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColorPrimary">@color/white_almost</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>

        <item name="android:colorBackgroundFloating" tools:targetApi="23">@color/dark</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:color">#ffffff</item>
        <item name="buttonTint">@color/white</item>
    </style>

    <style name="MyActionBar">
        <item name="android:background">@color/darkbkg</item>
        <item name="background">@color/darkbkg</item>
        <item name="android:itemTextAppearance">@style/textAppearance</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/darkbkg</item>
        <item name="android:textColorPrimary">@color/white_almost</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="DialogLight" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorLink">#000000</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Special Button styles -->
    <style name="BorderlessButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="BorderlessButtonLink" parent="BorderlessButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttonlink</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="BorderlessPanel" parent="BorderlessButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/panellink</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="BigBorderlessPanel">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bigpanellink</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- Font icons -->
    <style name="FontIconBig" parent="NormalText">
        <item name="android:textSize">@dimen/font_icon_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/font_icon_bg</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <!-- Generic text styles -->
    <style name="NormalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/gray_87_text</item>
    </style>

    <style name="NormalBoldText" parent="NormalText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_54_sec_text_icons</item>
    </style>

    <style name="HintText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_26_hint_text</item>
    </style>

    <style name="SmallHelpText" parent="SecondaryText">
        <item name="android:textSize">@dimen/caption</item>
    </style>

    <style name="ErrorText" parent="">
        <item name="android:textColor">@color/fg_error</item>
    </style>

    <style name="WarningText" parent="">
        <item name="android:textColor">@color/fg_warning</item>
    </style>

    <style name="OkText" parent="">
        <item name="android:textColor">@color/fg_ok</item>
    </style>

    <style name="SeedText" parent="">
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:textSize">@dimen/seed_text_size</item>
    </style>

    <style name="GenericCircle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/generic_circle_text_size</item>
    </style>

    <style name="GenericCircleGreen" parent="GenericCircle">
        <item name="android:background">@drawable/generic_green_circle</item>
    </style>

    <style name="GenericCircleRed" parent="GenericCircle">
        <item name="android:background">@drawable/generic_red_circle</item>
    </style>

    <!-- PagerTabStrip style -->
    <style name="PagerTabStrip" parent="NormalText">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:textColor">@color/actionbar_fg</item>
    </style>

    <!-- Widget amount style -->
    <style name="Amount" parent="NormalText">
        <item name="android:singleLine">true</item>
    </style>
    <style name="AmountBig" parent="Amount">
        <item name="android:textSize">@dimen/amount_text_size_big</item>
    </style>
    <style name="AmountSmall" parent="Amount">
        <item name="android:textSize">@dimen/amount_text_size_small</item>
    </style>
    <style name="AmountPending" parent="Amount">
        <item name="android:textSize">@dimen/amount_pending_text_size</item>
        <item name="android:textColor">@color/gray_26_hint_text</item>
    </style>
    <style name="AmountSymbol" parent="@android:style/TextAppearance">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="AmountBSymbol" parent="@android:style/TextAppearance">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AmountSymbolBig" parent="AmountSymbol">
        <item name="android:textSize">@dimen/amount_symbol_text_size</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AmountBSymbolBig" parent="AmountBSymbol">
        <item name="android:textSize">@dimen/amount_symbol_text_size</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AmountSymbolSmall" parent="AmountSymbol">
        <item name="android:textSize">@dimen/amount_text_size_small</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AmountBSymbolSmall" parent="AmountBSymbol">
        <item name="android:textSize">@dimen/amount_text_size_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Widget send output -->
    <style name="SendOutputTypeText" parent="NormalText">
        <item name="android:textColor">@color/primary_500</item>
    </style>
    <style name="SendOutputAmount" parent="NormalText">
        <item name="android:textSize">@dimen/send_output_amount_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Transaction row -->
    <style name="TransactionRowDirectionFontIcon" parent="SecondaryText">
        <item name="android:textSize">@dimen/transaction_row_direction_font_icon_size</item>
    </style>
    <style name="TransactionRowConfidenceFontIcon" parent="SecondaryText">
        <item name="android:textSize">@dimen/transaction_row_confirmations_font_icon_size</item>
    </style>
    <style name="TransactionRowMessageFontIcon" parent="SecondaryText">
        <item name="android:textSize">@dimen/transaction_row_message_font_icon_size</item>
    </style>
    <style name="TransactionRowDirectionText" parent="SecondaryText">
        <item name="android:textSize">@dimen/transaction_row_text_size_direction_text</item>
    </style>
    <style name="TransactionRowDate" parent="SecondaryText">
        <item name="android:textSize">@dimen/transaction_row_text_size_date</item>
    </style>
    <style name="AddressRowLabel" parent="NormalText">
        <item name="android:textSize">@dimen/row_text_size_label</item>
    </style>
    <style name="TransactionRowAmount" parent="Amount">
        <item name="android:textSize">@dimen/transaction_row_text_size_amount</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- About Activity -->
    <style name="AppNameLong">
        <item name="android:textSize">@dimen/app_name_long</item>
    </style>

    <!-- Exchange row -->
    <style name="ExchangeRowSymbol" parent="FontIconBig">
        <item name="android:textSize">@dimen/exchange_row_symbol_text_size</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ExchangeRowLabel" parent="NormalText">
        <item name="android:textSize">@dimen/exchange_row_text_size_label</item>
    </style>
    <style name="ExchangeRowAmount" parent="Amount">
        <item name="android:textSize">@dimen/exchange_row_text_size_amount</item>
    </style>

</resources>
